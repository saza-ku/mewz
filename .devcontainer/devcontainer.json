{
	"name": "Mewz Dev Container",
	"build": {
		"context": "..",
		"dockerfile": "./Dockerfile"
	},
	"containerUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"ziglang.vscode-zig"
			]
		}
	},
	"mounts": [
		"type=volume,target=${containerWorkspaceFolder}/build",
	],
	"postCreateCommand": {
		"fixVVolumePermissions": "sudo chown -R $(whoami): ${containerWorkspaceFolder}/build",
	}
}
